  </head>
  <body>
    <!-- header -->
    <%- include('mypageHeader.ejs') %>

    <div id="main">
      <div>
        <div id="room">
          <h3></h3>
          <select
            class="form-select"
            aria-label="Default select example"
            id="roomInput"
          ></select>
        </div>
        <form id="nicknameInput"></form>
      </div>
      <div id="chat">
        <!-- 채팅 메시지 영역 -->
      </div>
      <div>
        <form id="messageInput" class="display-flex">
          <input type="text" class="form-control" id="test" />
          <button type="submit" class="btn btn-lg btn-info float-right">
            전송
          </button>
        </form>
      </div>
    </div>

    <!-- modal -->
    <%- include('loginModal.ejs') %>
  </body>
  <script src="/socket.io/socket.io.js"></script>
  <script src="./scripts/chatting.js"></script>
